        cursor: pointer;
    }



    .flexContainer{
        display: flex;
        background-image: url(images/white_wall.png);
        justify-content: center;
    }

    input:focus,
    textarea:focus {
        border: 3px solid #555;
    }

    input {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
